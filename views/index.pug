
doctype html
html
  head
    meta(charset='utf-8')
    title Sheridan Slate App
    link(rel='stylesheet', href='../css/index.css')
    link(rel='stylesheet', href='../lib/semantic/dist/semantic.min.css')
  body
    #courses.ui.sidebar.inverted.vertical.menu
    #alert-list.ui.right.sidebar.inverted.vertical.menu
        #alerts.ui.items
    .pusher
        #course-content.ui.top.attached.menu
            a#course-button.item
                i.sidebar.icon 
            .right.menu
                a#alert-button.ui.item Alerts
        // #course-content.ui.vertical.top.menu
        .column
          .ui.form
            .field
              label Username
              .ui.left.icon.input
                input#username(type='text', placeholder='Username', style='background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=");', autocomplete='off')
                i.user.icon
            .field
              label Password
              .ui.left.icon.input
                input#password(type='password', style='background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=");', autocomplete='off')
                i.lock.icon
            #login.ui.blue.submit.button Login

        .ui.divider

        #classlist.ui.teal.labeled.icon.button Classlist
            i.add.icon

        #classlist-content.ui.middle.aligned.divided.list

        canvas#canvas


        // .ui.segment
        //     .ui.active.dimmer
        //         .ui.indeterminate.text.loader Logging in...

    script if (typeof module === 'object') {window.module = module; module = undefined;}
    script(src='../lib/jquery/dist/jquery.min.js')
    script(src='../lib/semantic/dist/semantic.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/pdf.js/1.5.456/pdf.js')
    script(src='../js/render.js')
    script if (window.module) module = window.module;
